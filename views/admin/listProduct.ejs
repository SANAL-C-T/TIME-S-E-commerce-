<h1><%= urlData.pageTitle %></h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Status</th>
                <th>Price</th>
                <!-- Add other product details as needed -->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% urlData.pro.forEach(product => { %>
                <tr>
                    <td><%= product.
                        productName %></td>
                    <td><%= product.productDescription %></td>
                    <td><%= product.stockCount %></td>
                    <td><%= product.productCategory %></td>
                    <td><%= product.Status %></td>
                    <td><%= product.
                        productPrice %></td>
                    <!-- Add other product details as needed -->
                    <td>
                        <!-- Add links or buttons for edit, delete, etc. -->
                        <a href="/admin/editProduct/<%= product._id %>">Edit</a>
                        <!-- Add other actions as needed -->
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>





