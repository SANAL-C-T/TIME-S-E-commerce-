<%-include("../partials/userloggedHeder.ejs")%>



<div class="container mt-5">
    <div class="row">
        <!-- Product Images -->
        <div class="col-md-6">
            <!-- Use an image viewer or gallery for multiple images -->
            <img src="<%= pdetail.productImage.productImage %>" class="img-fluid mb-3" alt="Product Image 1">
            <img src="image2.jpg" class="img-fluid mb-3" alt="Product Image 2">
            <!-- Add more images as needed -->
        </div>

        <!-- Product Information -->
        <div class="col-md-6">
            <h2><%= pdetail.productName %></h2>
            <p>Description: Lorem ipsum dolor sit amet, consectetur adipiscing elit....</p>
            <p>Price: $99.99</p>

            <!-- Size Selector -->
            <div class="mb-3">
                <label for="size" class="form-label">Select Size:</label>
                <select class="form-select" id="size">
                    <option value="small">Small</option>
                    <option value="medium">Medium</option>
                    <option value="large">Large</option>
                </select>
            </div>

            <!-- Quantity Selector -->
            <div class="mb-3">
                <label for="quantity" class="form-label">Quantity:</label>
                <input type="number" class="form-control" id="quantity" value="1" min="1">
            </div>

            <!-- Buy Now Button -->
            <button type="button" class="btn btn-primary my-4  ">Buy Now</button>
        </div>
    </div>
</div>



</div>



<%-include("../partials/footer.ejs")%>