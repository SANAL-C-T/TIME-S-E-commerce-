            </ul>
        </nav>
    </div>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 d-flex flex-column mx-3">
        <!-- First line -->
        <div class="d-flex justify-content-between my-4" id="firstline">
            <div class="mb-3 mx-4">
                <h4>NAME: <%= udata.first_name %> <%=udata.Last_name%></h4>
            </div>
            <div>
                <img src="<%= udata.profileImage %>" style="width: 150px;" alt="Profile Image">
            </div>
        </div>
    
        <!-- Second line - Contact details -->
        <h3 class="mx-4 mb-5">Contact details</h3>
        <div class="d-flex my-4" id="secondline">
            <div class="mb-3 mx-4">
                <h5>PHONE NUMBER: <%= udata.phone %></h5>
            </div>
            <div class="mb-3 mx-4">
                <h5>Email: <%= udata.email %></h5>
            </div>
        </div>
    
        <!-- Third line - Address details -->
        <h3 class="mx-4 mb-5">Address details</h3>
        <div class="d-flex my-4" id="thirdline">
            <div class="mb-3 mx-4">
                <ul>
                    <li><strong>House:</strong> <%= udata.Address[0].houseNo %> </li>
                    <li><strong>Street:</strong> <%= udata.Address[0].street %> </li>
                    <li><strong>Location:</strong> <%= udata.Address[0].location %> </li>
                    <li><strong>Landmark:</strong> <%= udata.Address[0].landmark %> </li>
                </ul>
            </div>
            <div class="ml-4">
                <ul>
                    <li><strong>City:</strong> <%= udata.Address[0].city %> </li>
                    <li><strong>State:</strong> <%= udata.Address[0].state %> </li>
                    <li><strong>Country:</strong> <%= udata.Address[0].country %> </li>
                    <li><strong>Pincode:</strong> <%= udata.Address[0].pincode %> </li>
                </ul>
            </div>
        </div>
    </main>
    




</div>



